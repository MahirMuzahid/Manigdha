<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manigdha.View.ProductInformatinFill"
             Title="ProductInformatinFill">
    <Grid RowDefinitions="300,*" BackgroundColor="White">
        <Image Source="infofilling.png" Aspect="AspectFit" VerticalOptions="Center" Margin="0,20,0,0" />
        <Grid Grid.Row="1" RowDefinitions="AUTO,*, 30,70" Margin="0,10,0,0">
            <Label Text="Product Information" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"/>
            <Grid>
                
            </Grid>
            <Grid Grid.Row="2" ColumnDefinitions="*,200,*" Margin="10,0,10,0" RowDefinitions="50,20">
                <Button Grid.Column="1" Grid.Row="0" BackgroundColor="#30295F2D" Clicked="Button_Clicked"/>
                <Label Text="Next" Grid.Column="1" FontSize="14" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" TextColor="{StaticResource Primary}"/>
                <Label Text="Go Back" Grid.Row="1" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"/>

            </Grid>
            
        </Grid>
    </Grid>
</ContentPage>