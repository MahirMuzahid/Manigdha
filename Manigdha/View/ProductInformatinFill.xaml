<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manigdha.View.ProductInformatinFill"
             Title="ProductInformatinFill">
    <Grid RowDefinitions="300,*" BackgroundColor="White">
        <Image Source="infofilling.png" Aspect="AspectFit" VerticalOptions="Center" Margin="0,20,0,0" />
        <Grid Grid.Row="1" RowDefinitions="AUTO,*, 20,50" Margin="0,10,0,0">
            <Label Text="Product Information" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold"/>
            <Grid>
                
            </Grid>
            <Grid Grid.Row="2" ColumnDefinitions="70,*,70" Margin="10,0,10,0">
                <Button  BackgroundColor="{StaticResource Gray950}"/>
                <Label Text="Back" Grid.Column="0" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
               
                <Button Grid.Column="2" BackgroundColor="{StaticResource Gray950}" Clicked="Button_Clicked"/>
                <Label Text="Next" Grid.Column="2" FontAttributes="Bold" HorizontalOptions="Center" TextColor="White"/>
               
            </Grid>
            
        </Grid>
    </Grid>
</ContentPage>