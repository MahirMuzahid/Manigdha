<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Manigdha.View.ProductInformatinFill"
             Title="ProductInformatinFill">
    <Grid RowDefinitions="300,AUTO,*" BackgroundColor="{StaticResource Gray950}">
        <Image Source="infofilling.png" Aspect="AspectFit" VerticalOptions="Center" Margin="0,20,0,0" />
        <Label Text="Product Information" Grid.Row="1" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold" Margin="0,10,0,0"/>
        <Grid Grid.Row="2">
            <Grid ColumnDefinitions="*,200,*" RowDefinitions="30,300,30,30" Margin="10,0,10,0" >
                <Grid RowDefinitions="AUTO,AUTO,AUTO,100,AUTO,AUTO,AUTO" Grid.ColumnSpan="3" Margin="10,20,0,0" RowSpacing="5">
                    <Label Text="Title" />
                    <Entry Placeholder="  Write Your Title Here" FontSize="12" Grid.Row="1" BackgroundColor="{StaticResource Gray900}"/>
                    <Label Text="Description" Grid.Row="2" Margin="0,10,0,0" />
                    <Editor Placeholder="  Write Your Description Here" FontSize="12" Grid.Row="3" BackgroundColor="{StaticResource Gray900}"/>
                    <Label Text="Asking Price" Grid.Row="4" Margin="0,10,0,0" />
                    <Entry Placeholder="  Write Your Title Here" FontSize="12" Grid.Row="5" BackgroundColor="{StaticResource Gray900}"/>
                </Grid>
                <Button Grid.Column="1" Grid.Row="2" BackgroundColor="#10ffffff" Clicked="Button_Clicked"/>
                <Label Text="Next" Grid.Column="1" Grid.Row="2" FontSize="14" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center" TextColor="White"/>
                <Label Text="Exit" Grid.Row="3" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" FontSize="12"/>

            </Grid>
        </Grid>
